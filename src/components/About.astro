---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

import AboutImg from "../assets/images/about.webp";
import cienciaAmbientaImg from "../assets/images/cienciaambiental.png";
import iebImg from "../assets/images/ieb.png";
import insularImg from "../assets/images/insular.png";

interface TeamInterface {
    image: ImageMetadata;
    name: string;
    position: string;
    url?: string;
}

const teams: TeamInterface[] = [
    {
        image: cienciaAmbientaImg,
        name: "Marcela Torres",
        position: "Bióloga Ambiental MgCs Ecología y Mg Gestión ambiental",
        url: "https://cienciambiental.cl/"
    },
    {
        image: iebImg,
        name: "Pablo Guerrero",
        position: "Biólogo, PhD Ecología",
        url: "https://ieb-chile.cl/"
    },
    {
        image: insularImg,
        name: "Iñigo Ricalde",
        position: "Ingeniero Civil, MgCs Hidrología y gestión de recursos hídricos",
        url: "https://insularchile.org/"
    },
];
---

<section
    style={`background-image: url(${AboutImg.src}); background-size: cover; background-position: center;`}
    class="py-10 sm:py-16 md:py-[130px]"
>
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            <!-- Columna 1: Descripción -->
            <div class="flex flex-col items-center justify-center gap-4 sm:gap-6 md:pr-[90px]">
                <h1
                    class="font-dunkel-expanded text-white text-center text-2xl sm:text-3xl md:text-[38px] leading-tight md:leading-[44px] font-normal subpixel-antialiased"
                >
                    QUIÉNES SOMOS
                </h1>
                <p class="parrafo text-white">
                    El Programa de Prevención de Extinciones XPP Copiapoa, está liderado por la
                    consultora <b class="underline">Cienciambiental</b>, el <b class="underline">Instituto de Ecología y Biodiversidad (IEB)</b> y la
                    empresa B <b class="underline">Insular Chile</b>, y que cuenta con el apoyo del fondo de inversión social
                    de BHP.
                </p>
                <p class="parrafo text-white">
                    La ejecución del proyecto está a cargo de un equipo multidisciplinario de más de
                    20 profesionales en áreas como ecología, conservación ex situ, restauración,
                    propagación y gestión ambiental.
                </p>
            </div>

            <!-- Columna 2: Equipo Directivo -->
            <div
                class="bg-xc-hueso rounded-[22px] p-[30px] flex flex-col gap-5 sm:gap-6 md:gap-[25px]"
            >
                <h4
                    class="font-dunkel-expanded text-[16px] font-normal leading-normal uppercase subpixel-antialiased"
                >
                    Equipo Directivo
                </h4>

                {
                    teams.map((team) => (
                        <div class="flex flex-row items-center gap-4">
                            <a href={team.url} class="cursor-pointer">
                                <Image
                                        src={team.image}
                                        alt={team.name}
                                        width={135}
                                        height={120}
                                        class="w-20 h-auto sm:w-28 md:w-[135px] flex-shrink-0"
                                />
                            </a>

                            <div class="flex-1">
                                <h4 class="font-manrope text-base sm:text-lg md:text-[20px] font-bold leading-normal">
                                    {team.name}
                                </h4>
                                <p class="caption">{team.position}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
