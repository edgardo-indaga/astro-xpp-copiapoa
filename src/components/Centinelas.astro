---
import { Image } from "astro:assets";
import CentinelasImg from "../assets/images/centinelas.webp";
import AdvertenciaImg from "../assets/images/advertencia.svg";

interface PuntosClaveInterface {
    title: string;
    description: string;
}

const PuntosClave: PuntosClaveInterface[] = [
    {
        title: "MICROHÁBITATS ESENCIALES",
        description: "Sirven de refugio y alimento a fauna y microbiota del desierto.",
    },
    {
        title: "PATRIMONIO DEL NORTE DE CHILE",
        description: "Son un símbolo de la identidad natural y cultural del norte de Chile.",
    },
    {
        title: "BIODIVERSIDAD EN RIESGO",
        description: "Varias especies están en peligro crítico de extinción.",
    },
    {
        title: "AMENAZAS CRECIENTES",
        description: "Están amenazados por el cambio climático y el tráfico ilegal.",
    },
];
---

<section class="bg-xc-verde py-8 sm:py-10 md:py-[50px]">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-10 gap-6 md:gap-0">
            <!-- Columna 1: Imagen con título -->
            <div class="md:col-span-4 flex justify-center md:justify-start">
                <div
                    style={`background-image: url(${CentinelasImg.src}); background-size: cover; background-position: center;`}
                    class="w-full max-w-[444px] h-[400px] sm:h-[500px] md:h-[650px] flex flex-row justify-center pt-16 sm:pt-20 md:pt-[100px]"
                >
                    <h1
                        class="font-dunkel-expanded text-xl sm:text-2xl md:text-[38px] leading-tight md:leading-[44px] text-xc-azul px-6 sm:px-12 md:px-[85px] text-center subpixel-antialiased"
                    >
                        CENTINELAS DE ATACAMA
                    </h1>
                </div>
            </div>

            <!-- Columna 2: Contenido -->
            <div
                class="md:col-span-6 flex flex-col justify-between gap-6 md:gap-8 py-4 sm:py-6 md:py-[40px] md:pl-[100px]"
            >
                <h2
                    class="font-manrope text-lg sm:text-xl md:text-[24px] leading-tight md:leading-[33px] text-white"
                >
                    Puntos clave para entender la <b>importancia</b> de los <b>cactus Copiapoa</b>
                </h2>

                <div class="flex flex-col justify-between gap-4">
                    {
                        PuntosClave.map((item) => (
                            <div>
                                <h4 class="text-white font-dunkel-expanded text-[20px] leading-tight md:leading-[28px]">
                                    {item.title}
                                </h4>
                                <p class="text-xc-hueso parrafo">{item.description}</p>
                            </div>
                        ))
                    }
                </div>

                <div
                    class="border-[1px] border-xc-hueso rounded-[22px] py-4 sm:py-5 md:py-[25px] px-4 sm:px-5 md:px-[20px] flex flex-row items-center gap-4 sm:gap-6 w-full md:w-[530px]"
                >
                    <Image
                        src={AdvertenciaImg}
                        alt="Advertencia"
                        width={60}
                        height={60}
                        class="w-10 h-10 sm:w-12 sm:h-12 md:w-[60px] md:h-[60px] flex-shrink-0"
                    />
                    <p class="text-xc-hueso parrafo">
                        Nos enfrentamos a la desaparición de una parte irremplazable del patrimonio
                        natural y cultural del desierto de Atacama.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
