    <div class="container mx-auto">
        <div class="flex flex-row justify-between items-center h-[130px] px-[20px] md:px-0">
            <div>
                <a href="/">
                    <Image
                        src={Logo}
                        alt="logo"
                        width={145}
                        height={80}
                        class="w-[145px] h-[80px]"
                    />
