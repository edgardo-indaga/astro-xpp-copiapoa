---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import WeDoImg from "../assets/images/wedo.webp";

import itemUnoImg from "../assets/images/item01-wedo.svg";
import itemDosImg from "../assets/images/item02-wedo.svg";
import itemTresImg from "../assets/images/item03-wedo.svg";
import itemCuatroImg from "../assets/images/item04-wedo.svg";

interface ItemsDoInterface {
    image: ImageMetadata;
    title: string;
    description: string;
}

const Items: ItemsDoInterface[] = [
    {
        image: itemUnoImg,
        title: "INVESTIGACIÓN",
        description:
            "El estudio del género Copiapoa y su relación con el entorno nos permite <b>conocer cómo se desempeñan en determinados contextos, evaluar el impacto del cambio climático y conocer las condiciones óptimas</b> para su conservación y propagación.",
    },
    {
        image: itemDosImg,
        title: "RESTAURACIÓN",
        description:
            "La recolección de semillas y la implementación de viveros permite <b>conservar y reproducir los cactus Copiapoa y otras especies nativas amenazadas</b>, para su futura propagación en ambientes silvestres y la restauración de ecosistemas áridos.",
    },
    {
        image: itemTresImg,
        title: "DESARROLLO LOCAL",
        description:
            "El conocimiento y valoración de los cactus Copiapoa en las comunidades locales y la identificación de oportunidades de emprendimiento sostenible asociadas, aportan al <b>cuidado colectivo de las especies y al desarrollo local</b>.",
    },
    {
        image: itemCuatroImg,
        title: "TRABAJO EN RED",
        description:
            "La conservación de los cactus Copiapoa solo es posible mediante la <b>colaboración del sector público, mundo científico, comunidades locales, y sector privado</b>.",
    },
];
---

<section
    style={`background-image: url(${WeDoImg.src}) ;background-size: cover; background-position: center;`}
    class="py-8 sm:py-12 md:py-[70px] h-auto md:h-[800px]"
    id="que-hacemos"
>
    <div class="container mx-auto px-4">
        <div class="flex flex-col items-center justify-center">
            <h1
                class="font-dunkel-expanded text-xc-hueso text-center text-2xl sm:text-3xl md:text-[38px] leading-tight md:leading-[44px] font-normal py-8 sm:py-10 md:py-[60px] subpixel-antialiased"
            >
                ¿QUÉ HACEMOS?
            </h1>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-4">
            {
                Items.map((item) => (
                    <div class="border-[1px] border-xc-azul rounded-[22px] py-6 sm:py-7 md:py-[30px] px-5 sm:px-6 md:px-[22px] bg-[#F5F5F5] w-full min-h-[320px] sm:min-h-[350px] md:w-[264px] md:h-[380px] flex flex-col">
                        <Image
                            src={item.image}
                            alt={item.title}
                            width={73}
                            height={73}
                            class="w-14 h-14 sm:w-16 sm:h-16 md:w-[73px] md:h-[73px]"
                        />
                        <h4 class="font-dunkel-expanded text-xc-azul text-[18px] leading-tight md:leading-[28px] py-3 sm:py-4 md:py-[15px] subpixel-antialiased">
                            {item.title}
                        </h4>
                        <p set:html={item.description} class="caption" />
                    </div>
                ))
            }
        </div>
    </div>
</section>
